<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/images/category-1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/category-2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/category-3.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container-products">
  <div class="container-new-products">
    <div class="title">Sản Phẩm Mới</div>
    <div class="title-dot">...</div>
    <div class="container-product-cart">
      {{#each newproducts}}
      <div class="product-cart">
        <a href="/products/{{this._id}}" class="link-product">
          <div class="product-cart-contain-hover">
            <img src="{{this.image}}">
            <div class="product-hover-contain">
              <a href="/user/add/{{this._id}}" class="link-action-product"><i class="fa fa-shopping-cart"></i></a>
              <a href="" class="link-action-product"><i class="fa fa-eye"></i></a>
              <a href="/products/{{this._id}}" class="link-action-product"><i class="fa fa-link"></i></a>
            </div>
            {{#if this.checkdiscount}}
            <div class="container-discount">
              <p>-{{this.discount}}%</p>
            </div>
            {{/if}}
          </div>
          <div class="container-product-text">
              <a href="/products/{{this._id}}" class="link-product">
                <div class="product-name" title="{{this.name}}">{{this.name}}</div>
              </a>
              {{#if this.checkdiscount}}
              <div class="contain-product-price">
                <div class="price">{{discountprice this.price this.discount}}<sup>đ</sup></div>
                <div class="discount-price">{{vnd this.price}}<sup>đ</sup></div>
              </div>
              {{else}}
              <div class="contain-product-price">
                <div class="price">{{vnd this.price}}<sup>đ</sup></div>
              </div>
              {{/if}}
            </div>
        </a>
      </div>
      {{/each}}


    </div>
  </div>

  <div class="container-feature-products">
    <div class="title">Sản Phẩm Nổi Bật</div>
    <div class="title-dot">...</div>
    <div class="container-product-cart">
      {{#each featuredproducts}}
